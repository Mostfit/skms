!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    %title
      = 'Office Twitter' + (catch_content(:title) ? '' : ": #{catch_content(:title)}")
    = css_include_tag :style
    /= css_include_tag :master
  %body
    .container
      .header
        .nav-panel#header-panel
          - if session.authenticated?
            %ul.nav-panel.round#header-panel
              %li.nav-panel#header-panel
                = link_to 'Home', url(:tweets) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Profile', url(:user, session.user) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Groups', url(:groups) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Polls', url(:polls) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Users', url(:users) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Logout', url(:logout)
        .banner
          = image_tag 'banner.gif', :height => '100px', :width => '200px', :class => 'round'

        - if session.authenticated?
          -if session.user.nick
            .current-user.round
              %h1{:style => "margin-top: 0px; margin-bottom: 0px;"}
                =session.user.nick

      .body
        .body-left.round
          = catch_content :for_layout
        .body-right.round
          = catch_content :for_sidebar
      .footer.round
