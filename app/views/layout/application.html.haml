!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    %title
      = 'Office Twitter' + (catch_content(:title) ? '' : ": #{catch_content(:title)}")
    = css_include_tag :style
    /= css_include_tag :master
  %body
    .container
      .header
        .nav-panel#header-panel
          - if session.authenticated?
            %ul.nav-panel#header-panel
              %li.nav-panel#header-panel
                = link_to 'Home', url(:tweets) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Profile', url(:users) 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Logout', url(:logout)
        .banner
          = image_tag 'logo_intellecap.gif'

      .body
        .body-left
          = catch_content :for_layout
        .body-right
          - if session.authenticated?
            .current-user
              = image_tag session.user.image.url(:thumb), :height=>'50px'
              %span.user-nick
                -if session.user.nick
                  %h4 
                    =session.user.nick
          = catch_content :for_sidebar
      .footer
