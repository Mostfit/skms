!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    %title
      = 'Office Twitter' + (catch_content(:title) ? '' : ": #{catch_content(:title)}")
    = css_include_tag :style
    = js_include_tag :jquery
    = js_include_tag :application
    /= css_include_tag :master
  %body
    .container
      .header
        .top-text.round
          %h1{:style => "margin-top: 0px; margin-bottom: 0px;"}
            == Intellecap - KMS
        #header-panel
          - if session.authenticated?
            %ul.nav-panel.round
              %li.nav-panel#header-panel
                = link_to 'Home', url(:tweets), :title => 'Home' 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Users', url(:users), :title => 'See all the users in your office network' 
                &nbsp
              %li.nav-panel#header-panel
                = link_to 'Logout', url(:logout), :title => 'Logout'
        #search
          %form{:action => url(:search), :method => 'POST'}
            %input{:type => 'text', :name => 'query'}
            %input{:type => 'submit', :value => '', :class => 'submit', :id => 'search_submit'}

      .body
        .body-left.round
          = catch_content :for_layout
        .body-right.round
          = catch_content :for_sidebar
      .footer.round
        == &copy; 2009 Intellecap &mdash; This software is released under the #{link_to 'GNU Affero General Public License', 'http://www.gnu.org/licenses/agpl.html'}.
